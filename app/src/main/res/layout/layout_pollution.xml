<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/float_triangle"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/shape_triangle_reverse"/>

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0.0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:text="优"
            android:textSize="11sp"
            android:textColor="@color/whiteColor"
            android:gravity="center"
            android:background="@color/pollutionColor1"/>
        <TextView
            android:layout_width="0.0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:text="良"
            android:textSize="11sp"
            android:textColor="@color/whiteColor"
            android:gravity="center"
            android:background="@color/pollutionColor2"/>
        <TextView
            android:layout_width="0.0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:text="轻度污染"
            android:textSize="11sp"
            android:textColor="@color/whiteColor"
            android:gravity="center"
            android:background="@color/pollutionColor3"/>
        <TextView
            android:layout_width="0.0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:text="中度污染"
            android:textSize="11sp"
            android:textColor="@color/whiteColor"
            android:gravity="center"
            android:background="@color/pollutionColor4"/>
        <TextView
            android:layout_width="0.0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:text="重度污染"
            android:textSize="11sp"
            android:textColor="@color/whiteColor"
            android:gravity="center"
            android:background="@color/pollutionColor5"/>
        <TextView
            android:layout_width="0.0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:text="严重污染"
            android:textSize="11sp"
            android:textColor="@color/whiteColor"
            android:gravity="center"
            android:background="@color/pollutionColor6"/>

    </LinearLayout>
</LinearLayout>
